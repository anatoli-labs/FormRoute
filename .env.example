# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com
TO_EMAIL=notifications@yoursite.com

# Google Sheets (optional - only if using Google Sheets adapter)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n

# Turso Database (optional - only if using Turso adapter)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# Make.com (optional - only if using Make webhook adapter)
MAKE_WEBHOOK_URL=https://hook.us1.make.com/your-webhook-url

# Spam Protection (optional)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key